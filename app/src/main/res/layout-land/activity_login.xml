<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Account.LoginActivity">


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <Button
                    android:id="@+id/privateNotesBtn"
                    android:layout_width="145dp"
                    android:layout_height="37dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/private_notes"
                    android:onClick="notasPrivate"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/loginLabel"
                    app:layout_constraintStart_toStartOf="@+id/loginLabel"
                    app:layout_constraintTop_toBottomOf="@+id/createAccountBtn" />

            <Button
                    android:id="@+id/createAccountBtn"
                    android:layout_width="165dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:onClick="createAccount"
                    android:text="@string/create_account"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/passwordIn"
                    app:layout_constraintStart_toStartOf="@+id/passwordIn"
                    app:layout_constraintTop_toBottomOf="@+id/passwordIn" />

            <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="81dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/login"
                    android:onClick="login"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/emailIn"
                    app:layout_constraintStart_toStartOf="@+id/emailIn"
                    app:layout_constraintTop_toBottomOf="@+id/emailIn" />

            <EditText
                    android:id="@+id/emailIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:contentDescription="@string/email"
                    android:ems="10"
                    android:hint="email@email.com"
                    android:inputType="textPersonName"
                    app:layout_constraintEnd_toStartOf="@+id/loginLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/loginLabel" />

            <EditText
                    android:id="@+id/passwordIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/loginLabel"
                    app:layout_constraintTop_toBottomOf="@+id/loginLabel" />

            <TextView
                    android:id="@+id/loginLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/login"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TitleLabel" />

            <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="238dp"
                    android:layout_height="147dp"
                    android:layout_marginTop="30dp"
                    android:contentDescription="@string/notas"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/notes" />

            <TextView
                    android:id="@+id/TitleLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/make_your_notes"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>